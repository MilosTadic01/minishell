FILES = main.c lexer.c lexer_utils.c get_tokens.c parser.c
OFILES = $(FILES:.c=.o)
HFILES = tokens.h minishell.h parser.h structs.h

NAME = minishell

CFLAGS = -Wall -Wextra -Werror
MAKE = make

all: $(NAME)

$(NAME): $(OFILES) $(HFILES)
	$(MAKE) bonus -C ./libft
	cc $(CFLAGS) $(OFILES) libft/libft.a -o $(NAME)

%.o: %.c $(HFILES)
	cc -c $(CFLAGS) -g $< -o $@

clean:
	rm -f $(OFILES)
	$(MAKE) clean -C ./libft

fclean: clean
	rm -f $(NAME)
	$(MAKE) fclean -C ./libft

re: fclean all

.PHONY: all clean re fclean bonus